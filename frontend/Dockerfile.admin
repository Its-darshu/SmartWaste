# Admin Dashboard Dockerfile
FROM node:18-alpine as builder

WORKDIR /app
COPY package*.json ./
RUN npm install

COPY . .
ENV REACT_APP_ROLE=admin
ENV REACT_APP_APP_NAME="SmartWaste - Admin Panel"
ENV REACT_APP_PRIMARY_COLOR="#e74c3c"
ENV REACT_APP_FEATURES="manage,assign,analytics,users"

RUN npm run build

FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]