# User Dashboard Dockerfile
FROM node:18-alpine as builder

WORKDIR /app
COPY package*.json ./
RUN npm install

COPY . .
ENV REACT_APP_ROLE=user
ENV REACT_APP_APP_NAME="SmartWaste - Report Waste"
ENV REACT_APP_PRIMARY_COLOR="#3498db"
ENV REACT_APP_FEATURES="report,track"

RUN npm run build

FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]